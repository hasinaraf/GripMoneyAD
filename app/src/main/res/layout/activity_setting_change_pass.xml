<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingChangePass">

    <ImageView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#d9D9D9"
        android:contentDescription="@string/footer"
        android:elevation="30dp"
        android:src="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvChgPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Change Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/tvOldPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChgPass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Current Password"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/etOPass"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvOldPass"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/input_shape"
        android:backgroundTint="#749FC2BB"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etOPass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/etNPass"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvNewPass"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/input_shape"
        android:backgroundTint="#FFBE00"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvMention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNPass"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Please enter a new strong password consists of 8-20 alphanumberic characters"
        android:textSize="11dp"
        android:textColor="@color/lightgrey"/>

    <TextView
        android:id="@+id/tvCNPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNPass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Confirm New Password"
        android:textSize="14dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etCNPass"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvCNPass"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/input_shape"
        android:backgroundTint="#FFBE00"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Save"
        android:layout_below="@+id/etCNPass"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FC766A"/>

</RelativeLayout>