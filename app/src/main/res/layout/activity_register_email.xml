<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:layout_alignBottom="@+id/title2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="2dp"
        android:shadowColor="#7F000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Money"
        android:textColor="#DBB04A"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="213dp"
        android:bottomLeftRadius="15dp"
        android:bottomRightRadius="15dp"
        android:shadowColor="#7F000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Grip"
        android:textColor="#b1b8b5"
        android:textSize="30dp"
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:src="@drawable/user" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-thin"
                android:text="NAME:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-thin"
                android:text="EMAIL:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_alignStart="@+id/txtEmail"
                android:layout_marginStart="-24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:fontFamily="sans-serif-thin"
                android:text="PASSWORD:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtConfPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPassReq"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-thin"
                android:text="CONFIRM \n PASSWORD:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtPassReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSignUpPassword"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtPass"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:text="Please enter a strong password consists of 8-20 alphanumberic characters"
                android:textColor="#A0A1A1"
                android:textSize="10sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSignUpName"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtName"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtName"
                android:width="1dip"
                android:background="@drawable/myshape"
                android:backgroundTint="#48808888"
                android:color="#4fa5d5"
                android:ems="10"
                android:fadingEdgeLength="2dp"
                android:inputType="text"
                android:maxLines="1"
                app:elevation="100dp" />

            <EditText
                android:id="@+id/etSignUpEmail"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSignUpName"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtEmail"
                android:background="@drawable/myshape"
                android:backgroundTint="#48808888"
                android:inputType="text"
                android:maxLines="1"
                app:elevation="100dp" />

            <EditText
                android:id="@+id/etSignUpPassword"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSignUpEmail"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtPass"
                android:background="@drawable/myshape"
                android:backgroundTint="#48808888"
                android:inputType="textPassword"
                android:maxLines="1"

                app:elevation="100dp" />

            <EditText
                android:id="@+id/etSignUpConfPassword"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPassReq"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/txtConfPass"
                android:layout_toRightOf="@+id/txtConfPass"
                android:background="@drawable/myshape"
                android:backgroundTint="#48808888"
                android:inputType="textPassword"
                android:maxLines="1"
                android:visibility="visible"
                app:elevation="100dp"
                tools:visibility="visible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvForgotYourPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvLogin"
        android:layout_centerHorizontal="true"
        android:text="Forgot Your Password?"
        android:textColor="#FC766A" />

    <Button
        android:id="@+id/btnMiddle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgotYourPassword"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgotYourPassword"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/btnMiddle"
        android:backgroundTint="#FC766A"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnOtherLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgotYourPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"

        android:layout_toLeftOf="@+id/btnMiddle"
        android:backgroundTint="#FFFFFF"
        android:text="Other login method"
        android:textColor="#FC766A"
        android:textSize="10dp" />

</RelativeLayout>