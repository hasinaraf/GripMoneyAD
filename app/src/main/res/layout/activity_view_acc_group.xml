<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FC766A"
    tools:context=".AccountGroup.ViewAccGroup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d9D9D9"
            android:contentDescription="@string/footer"
            android:elevation="30dp"
            android:src="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Edit Account Detail"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:translationZ="90dp" />

        <EditText
            android:id="@+id/etAccAmountDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitle"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tvNote"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitle"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="Amount:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAccNameDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAccAmountDetail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tvNote"
            android:inputType="text"
            android:maxLines="1" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAmount"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Name:" />

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Group:" />

        <EditText
            android:id="@+id/etAccGroupDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAccNameDetail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tvNote"
            android:focusable="false"
            android:hint=""
            android:inputType="text"/>

        <Button
            android:id="@+id/btnAccGroupDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAccNameDetail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tvNote"
            android:backgroundTint="#00000000"
            android:stateListAnimator="@null" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroup"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="351dp"
            android:text="Note:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAccNoteDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAccGroupDetail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tvNote"
            android:inputType="text"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FBBC05"
            android:contentDescription="@string/footer"
            android:elevation="30dp"
            android:src="@drawable/rectangle"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/btnMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/footer"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FC766A"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnUpdateAccount"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_above="@+id/footer"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@+id/btnMiddle"
            android:backgroundTint="#FC766A"
            android:text="Save"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_above="@+id/footer"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/btnMiddle"
            android:backgroundTint="#FFCA07"
            android:text="Delete"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>